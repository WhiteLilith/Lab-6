using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApplication19
{
    class Program
    {
        static void Main(string[] args)
        {
            double A, B, C, D;
            Console.Write("Введите год: ");
            A = double.Parse(Console.ReadLine());
            B = A % 100;
            D = A / 100;
            C = D - 1;
            if (B == 0)
            {
                Console.Write("Данный год принадлежит к ");
                Console.Write(C);
                Console.WriteLine(" столетию");
            }
            else
            {
                Console.Write("Данный год принадлежит к ");
                Console.Write(B);
                Console.WriteLine(" столетию");
            }
            Console.ReadKey();
        }
    }
}
